@model IEnumerable<CoverType>
@{
    ViewData["Title"] = "Index";
}

<!--call  tempData from _Notification on partial View -->

<!-- you must use this file from _layout to use on all views -->
@*<partial name="_Notification" />*@
<!--End-->

@*how to title fore the table *@
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">CoverType List</h2>
        </div>
        <div class="col-6 text-end">
          <a asp-controller="CoverType" asp-action="Create" class="btn btn-primary">
          @*how to write icon from bootstrap *@
          <i class="bi bi-plus-circle-dotted"></i> &nbsp; Create New Category
          </a>
        </div>
    </div>
</div>
   @*this end of title*@
<table class="table table-border table-striped" style="width:100%">
    <thead>
        <tr>
        <td>
            CoverTypeName
        </td>
        
        <th>Edit</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="30%">
                  @obj.Name
                </td>
                
                <td>
                    
                    <div class="w-75 btn-group" role="group">
                        <!--how to Edit button-->
                        <a asp-controller="CoverType" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                            <!-- bootstrap this the class of icon from https://icons.getbootstrap.com/icons/-->
                            <i class="bi bi-pencil-square"></i>Edit</a>
                            <!--how to delete button-->
                            <a asp-controller="CoverType" asp-action="Delete" asp-route-id="@obj.Id" 
                            class="btn btn-danger mx-2">
                            <!-- bootstrap this the class of icon from https://icons.getbootstrap.com/icons/-->
                            <i class="bi bi-trash3-fill"></i>Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
